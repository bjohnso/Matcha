<div id="profileImageSelector" class="modal modal-fixed-footer">
    <div class="modal-content">
      <div class="row valign-wrapper center-align">
        <div class="col s12">
          <h4>Select Profile Image</h4>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
            {{#if media}}
                {{#each media}}
                    {{#if (indexStep @index 3)}}
                        <div class="row">
                    {{/if}}
                        <div class="col s4">
                            <div class="card">
                                <div class="card-image">
                                    <a class="profileImageSelected" id="profileImageSelected{{@index}}"><img src="{{permalink}}"></a>
                                </div>
                            </div>
                        </div>
                    {{#if (indexStep @index 3)}}
                            </div>
                    {{/if}}
                {{/each}}
              {{/if}}
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <a href="#!" id="profileImageSelectorCancelBtn" class="modal-close waves-effect waves-green btn-flat">Cancel</a>
    </div>
</div>

<div id="profileImageConfirm" class="modal modal-fixed-footer">
    <div class="modal-content">
      <div class="row">
        <div class="col s12">
           
            <div class="card">
                <div class="card-image">
                    <img id="profileImageConfirmLink" src="">
                </div>
            </div>
                     
        </div>
      </div>

    </div>
    <div class="modal-footer">
      <a href="#!" id="profileImageSelectorAcceptBtn" class="modal-close waves-effect waves-green btn-flat">Accept</a>
    </div>
    <form action="/user/update/profileImage" method="POST" id="profileImageForm">
      <input type="text" name="profileImage" id="profileImage" value="" hidden="hidden">
    </form>
</div>