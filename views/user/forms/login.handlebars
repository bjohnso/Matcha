<div class="col s1 section"></div>

<div class="container">
    <div class="row">
        <div class="col s8 offset-s2">
            <div class="card-panel center-align">
                <h5>Login</h5>
                <form action="/user/login" method="POST">
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="email" class="validate" name="email" id="email" required>
                            <label for="email">Email</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input type="password" class="validate" name="password" id="password" required>
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <button type="submit" class="btn">Login</button>
                    </div>
                </form>
                <div class="row">
                    <a href="/auth/register">Don't have an account?</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s4 offset-s4 center-align">
            <span>-OR-</span>
        </div>
    </div>

    <div class="row">
        <div class="col s12 center-align">
            {{#unless user}}
                <a style="width:23vw" class="btn red darken-1" href="/auth/google"><i class="fab fa-google left"></i> Login With Google</a>
            {{/unless}}
        </div>
    </div>

    <div class="row">
        <div class="col s12 center-align">
            {{#unless user}}
                <a style="width:23vw" class="btn pink darken-1" href="/auth/instagram"><i class="fab fa-instagram left"></i> Login With Instagram</a>
            {{/unless}}
        </div>
    </div>

</div>